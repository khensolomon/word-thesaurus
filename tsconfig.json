{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Node",
    // source directory
    "rootDir": "./lib",
    // output directory
    "outDir": "./dist",
    // type output directory
    "declarationDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "watch": false,
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "traceResolution": false,
    "stripInternal": false,
    "baseUrl": "lib",
    "lib": [
      "es6"
    ],
    "types": [
      "node"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}